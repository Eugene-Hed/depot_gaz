{
  "buildCommand": "composer install --no-dev --optimize-autoloader && npm run build",
  "outputDirectory": "public",
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "LOG_CHANNEL": "stack",
    "LOG_LEVEL": "error"
  },
  "functions": {
    "api/index.php": {
      "runtime": "php-8.3"
    }
  },
  "routes": [
    {
      "src": "/public/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ]
}
